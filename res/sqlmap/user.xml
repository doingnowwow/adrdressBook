<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
			PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
			"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="user">



	<!--전체  주소록 목록 조회 -->
	<select id="selectAllUser" resultClass="UserVO">
		SELECT * FROM TB_USER
	</select>

	<!--주소록에 사용자 추가하기 -->
	<insert id="insertUser" parameterClass="UserVO">
		INSERT INTO TB_USER(AD_NO,AD_NAME,AD_HP,AD_MAIL,AD_COM,AD_DEPARTMENT,AD_POSITION,AD_MEMO)
		VALUES(USER_SEQ.NEXTVAL,#ad_name#,#ad_hp#,#ad_mail#,#ad_com#,#ad_department#,#ad_position#,#ad_memo#)
	</insert>

	<!--주소록 사용자 삭제하기 -->
	<delete id="deleteUser" parameterClass="int">
		DELETE FROM TB_USER
		WHERE AD_NO	= #ad_no#
	</delete>

	<!--주소록 사용자 수정하기 -->
	<update id="updateUser" parameterClass="UserVO">
		UPDATE TB_USER
		SET
			AD_NAME =#ad_name#
			,AD_HP=#AD_HP#
			,AD_MAIL=#AD_MAIL#
			,AD_COM=#AD_COM#
			,AD_DEPARTMENT=#AD_DEPARTMENT#
			,AD_POSITION=#AD_POSITION#
			,AD_MEMO=#AD_MEMO#
		WHERE AD_NO = #ad_no#
	</update>

</sqlMap>





